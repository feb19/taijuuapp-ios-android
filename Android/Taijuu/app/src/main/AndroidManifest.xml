<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.feb19.taijuu">

    <application
        android:allowBackup="true"
        android:name=".TaijuuApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".InputTextbasedActivity"
            android:label="体重を入力 (kg)"
            android:windowSoftInputMode="stateVisible"
            />
        <activity
            android:name=".InputPickerbasedActivity"
            android:label="体重を入力 (kg)" />
        <activity
            android:name=".PasscodeActivity"
            android:label="パスコード"
            android:windowSoftInputMode="stateVisible"
            />
        <activity
            android:name=".SettingHeightActivity"
            android:label="身長の設定 (cm)"
            android:windowSoftInputMode="stateVisible"
            />
        <activity
            android:name=".SettingPasscodeActivity"
            android:label="パスコードの設定"
            android:windowSoftInputMode="stateVisible"
            />
        <activity
            android:name=".SettingRemovePasscodeActivity"
            android:label="パスコードの削除"
            android:windowSoftInputMode="stateVisible"
            />
        <receiver android:name=".AlarmReceiver"></receiver>
    </application>

</manifest>